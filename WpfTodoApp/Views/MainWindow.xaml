<Window x:Class="WpfTodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTodoApp"
        xmlns:vm="clr-namespace:WpfTodoApp.ViewModels"
        mc:Ignorable="d"
        Title="To-Do List" Height="500" Width="600"
        Background="#f0f2f5"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:TaskViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="4" />
        <local:CompletedToBrushConverter x:Key="CompletedToBrushConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:BoolToTextConverter x:Key="BooleanToTextConverter" />
        <!-- Estilo animado para botón de guardar -->
        <Style x:Key="AnimatedPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="LimeGreen"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="0"
                        RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1.0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1.0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Botón + formulario -->
            <RowDefinition Height="*"/>
            <!-- Lista de tareas con scroll -->
        </Grid.RowDefinitions>

        <!-- Parte superior -->
        <StackPanel Grid.Row="0">
            <!-- Botón para mostrar/ocultar formulario -->
            <StackPanel>
                  <Button Content="{Binding ShowAddForm, Converter={StaticResource BooleanToTextConverter}}" 
                    Command="{Binding ToggleAddFormCommand}" 
                    Style="{StaticResource AnimatedPrimaryButton}"
                    HorizontalAlignment="Right" />
            </StackPanel>
          
            <!-- Formulario para agregar nueva tarea -->
            <Border Background="White"
        CornerRadius="10"
        Padding="20"
        BorderBrush="#DDD"
        BorderThickness="1"
        Margin="50,10,50,10"
        Visibility="{Binding ShowAddForm, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border.Effect>
                    <DropShadowEffect Color="Gray"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.3"/>
                </Border.Effect>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Agrega tu Tarea" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="Black"/>

                <TextBlock Text="Título:" FontWeight="Bold"/>
                <TextBox Text="{Binding NewTask.Title, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,10"/>

                <TextBlock Text="Descripción:" FontWeight="Bold"/>
                <TextBox Text="{Binding NewTask.Description, UpdateSourceTrigger=PropertyChanged}" 
         AcceptsReturn="True" Height="60" Margin="5,5,5,10" TextWrapping="Wrap"/>

                <TextBlock Text="Prioridad:" FontWeight="Bold"/>
                <ComboBox SelectedValue="{Binding NewTask.Priority, UpdateSourceTrigger=PropertyChanged}" 
                  SelectedValuePath="Content"
                  Margin="5,5,5,10">
                            <ComboBoxItem Content="1" />
                            <ComboBoxItem Content="2" />
                            <ComboBoxItem Content="3" />
                        </ComboBox>

                <TextBlock Text="Fecha límite:" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding NewTask.DueDate, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,10"/>

                <Button Content="Guardar"
        Command="{Binding AddNewTaskCommand}"
        Style="{StaticResource AnimatedPrimaryButton}"/>
            </StackPanel>
            </Border>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView ItemsSource="{Binding Tasks}"
          Background="Transparent"
          BorderThickness="0"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Grid.Row="1"
          Margin="10">
                <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="40"
                        Margin="0 10"
                        CornerRadius="12"
                        Background="{Binding IsCompleted, Converter={StaticResource CompletedToBrushConverter}}"
                        Effect="{StaticResource DropShadowEffect}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Title -->
                                    <TextBlock Text="{Binding Title}"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#2D2D30"
                                   Grid.Row="0"/>

                                    <!-- Description -->
                                    <TextBlock Text="{Binding Description}"
                                   FontSize="14"
                                   Foreground="#4A4A4A"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"
                                   Grid.Row="1"/>

                                    <!-- Status -->
                                    <StackPanel Orientation="Horizontal"
                                    Grid.Row="2"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Center"
                                    >
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Prioridad:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Priority}" Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="|" Foreground="#999"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Completado:" FontWeight="Bold"/>
                                            <CheckBox IsChecked="{Binding IsCompleted}"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Dates -->
                                    <StackPanel Orientation="Vertical"
                                    Grid.Row="3"
                                    Margin="0,10,0,0"
                                    >
                                        <TextBlock Text="{Binding DueDate, StringFormat='Fecha límite: {0:dd/MM/yyyy}'}"
                                       Foreground="#666"/>
                                        <TextBlock Text="{Binding LastModified, StringFormat='Modificado: {0:dd/MM/yyyy HH:mm}'}"
                                       Foreground="#666"/>
                                    </StackPanel>

                                    <!-- Buttons -->
                                    <StackPanel Orientation="Horizontal"
                                    Grid.Row="4"
                                    HorizontalAlignment="Right"
                                    Margin="0,15,0,0"
                                    >
                                        <Button Content="✔"
                                    Width="30"
                                    Height="30"
                                    ToolTip="Guardar"
                                    FontSize="16"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderBrush="#4CAF50"
                                    Cursor="Hand"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Command="{Binding DataContext.SaveTaskCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                    CommandParameter="{Binding}"/>

                                        <Button Content="🗑"
                                    Width="30"
                                    Height="30"
                                    ToolTip="Eliminar"
                                    FontSize="16"
                                    Background="#F44336"
                                    Foreground="White"
                                    BorderBrush="#F44336"
                                    Cursor="Hand"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                    CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
        </ScrollViewer>
    </Grid>
</Window>

